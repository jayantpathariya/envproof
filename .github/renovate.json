{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true
    },
    {
      "groupName": "Test dependencies",
      "matchPackagePatterns": ["vitest", "@vitest/*", "coverage"],
      "schedule": ["before 3am on Monday"]
    },
    {
      "groupName": "TypeScript and ESLint",
      "matchPackagePatterns": ["typescript", "eslint", "@eslint/*", "@types/*"],
      "schedule": ["before 3am on Monday"]
    },
    {
      "groupName": "Build tools",
      "matchPackagePatterns": ["tsup", "prettier", "publint"],
      "schedule": ["before 3am on Monday"]
    }
  ],
  "schedule": ["before 3am on Monday"],
  "prConcurrentLimit": 3,
  "prCreation": "not-pending",
  "rangeStrategy": "bump",
  "semanticCommits": "enabled",
  "labels": ["dependencies"],
  "reviewers": ["jayantpathariya"],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security"]
  }
}
